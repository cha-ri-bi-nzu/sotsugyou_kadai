<h4><%= @attendances.first.working_day.month %>月</h4>

<table border>
  <thead>
    <tr>
      <th colspan="1"></th>
      <% @days.each do |day| %>
        <th><%= day.mday %></th>
      <% end %>
      <th colspan="3">勤怠情報</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>氏名</td>
      <% @days.each do |day| %>
        <td><%= t("date.abbr_day_names")[day.wday] %></td>
      <% end %>
      <td>出勤</td>
      <td>休日</td>
      <td>総勤務時間</td>
    </tr>
    <% @group_users.each do |user| %>
      <% month_working_times = 0 %>
      <% work_days = 0 %>
      <% holidays = 0 %>
      <tr>
        <td><%= user.name %></td>
        <% @attendances.each do |attendance| %>
          <% if attendance.user_id == user.id %>
            <td><%= attendance.working_status.status %></td>
            <% month_working_times += attendance.working_status.working_times %>
            <% work_days += 1 if [1, 2].include?(attendance.working_status.id) %>
            <% holidays += 1 if attendance.working_status.id == 3 %>
          <% end %>
        <% end %>
        <td><%= work_days %></td>
        <td><%= holidays %></td>
        <td><%= month_working_times %></td>
      </tr>
    <% end %>
  </tbody>
</table>

